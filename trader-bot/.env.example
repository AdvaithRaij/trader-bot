# Trading Bot Environment Configuration
# Copy this file to .env and fill in your actual API keys

# Trading Configuration
INITIAL_CAPITAL=100000.0
MAX_CAPITAL_PER_TRADE=0.01
MAX_ACTIVE_TRADES=2
MAX_DAILY_LOSSES=3
MAX_DAILY_DRAWDOWN=0.05
MIN_RISK_REWARD_RATIO=1.5
AI_CONFIDENCE_THRESHOLD=0.8

# Market Timings (IST)
MARKET_OPEN_HOUR=9
MARKET_OPEN_MINUTE=15
FORCE_EXIT_HOUR=15
FORCE_EXIT_MINUTE=10

# Polling Intervals (seconds)
INACTIVE_POLL_INTERVAL=600
ACTIVE_POLL_INTERVAL=60

# API Keys - Fyers
FYERS_APP_ID=your_fyers_app_id_here
FYERS_SECRET_KEY=your_fyers_secret_key_here
FYERS_ACCESS_TOKEN=your_fyers_access_token_here
FYERS_REDIRECT_URI=https://trade.fyers.in/api-login/redirect-uri/index.html

# AI API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Database
MONGODB_URL=mongodb://localhost:27017/
DATABASE_NAME=trading_bot

# Redis
REDIS_URL=redis://localhost:6379/0

# External APIs
SCREENER_API_KEY=your_screener_api_key_here
CHARTINK_API_KEY=your_chartink_api_key_here
TRADINGVIEW_API_KEY=your_tradingview_api_key_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Mock Mode (set to false for production)
MOCK_MODE=true
MOCK_BROKER=true
MOCK_AI=true

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/trading_bot.log
